# Phoenix Warm-Up Engine â€” Environment Configuration
# Copy this file to .env and adjust values as needed.
# DO NOT commit this file to version control if it contains real credentials.

# Working hours (24-hour format HH:MM)
# Emails will only be sent between these times.
WORK_START=08:00
WORK_END=20:00

# Bounce rate threshold (0.0 to 1.0)
# If an inbox's bounce rate exceeds this, it will be auto-paused.
BOUNCE_THRESHOLD=0.05

# Maximum consecutive SMTP errors before auto-pausing an inbox
MAX_CONSECUTIVE_ERRORS=3

# Percentage of received emails to reply to (0.0 to 1.0)
REPLY_RATE=0.40

# Application version
APP_VERSION=1.0.0
